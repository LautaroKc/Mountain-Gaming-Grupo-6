<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') %>
<link rel="stylesheet" href="/stylesheets/<%= css %>">
<body>
<%- include('partials/header') %>

<div class="container-fluid" style="width: 100%; height: 550px;">
    <div class="row">
        <div class="col-12">
            <h2>Resultados de su busqueda: <%= producto.length %></h5>
        </div>
        <div class="col-sm-12 col-md-6">
            <figure id="productoCajaBusqueda">
            <% producto.forEach(producto => { %>
                <a href="/products/detalle/<%= producto.id %>" style="text-decoration: none; background-color: red; transition: 2s;">
                <img src="/images/products/<%= producto.imagen %>" alt="img" width="15%" height="200px" style="border: 1px solid black; border-radius: 5px;">
                <h4 class="productoEncontrado" style="color: orange; -webkit-text-stroke: 1px black;"><%= producto.nombre %></h4>
                </a>
            <% }) %>
            </figure>
        </div>
    </div>
</div>

<%- include('partials/footer') %> 
</body>
</html>