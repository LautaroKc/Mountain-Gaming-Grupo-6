<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
    <body>
    <%- include('partials/header') %>

<div class="container" style="background-color:rgba(136, 216, 240, 0.507); margin-top: 10px; margin-bottom: 10px;">
    <div class="row">    
        <div class="col-12">
            <h4 class="nav justify-content-center" style="border-bottom: 1px solid white; margin-bottom: 15px;">Productos subidos</h4>
        </div>
        <div class="row">
            <% productos.forEach(elemento => { %>
            <div class="col-sm-12 col-md-6 col-lg-4 my-4">
                <div class="col-12 text-center">
                    <h5 style="color: orange;"><%= elemento.nombre %></h5>
                    <img src="/images/products/<%= elemento.imagen %>" class="img-fluid">
                    <h4 class="my-2" style="color: rgb(0, 255, 0);">$<%= elemento.precio %></h4>
                    <p style="color: white; font-size: small;"><%= elemento.descripcion %></p>
                    <div class="nav justify-content-center">
                        <div>
                        <!---Agregar ruta en el action para el formulario de ediciÃ³n(GET)-->
                        <form action="/products/editar/<%= elemento.id %>" method="GET">
                        <button type="submit">Editar</button>
                        </form>
                        </div>
                        <div>
                         <!---Agregar ruta para eliminar el producto(DELETE)-->
                        <form action="/products/eliminar/<%= elemento.id %>?_method=DELETE" method="POST">
                            <button type="submit">Eliminar</button>
                        </form>
                        </div>
                    </div>       
                </div>
            </div>
            <% }) %>
        </div>
       
            
     
    </div>
</div>

</body>
<%- include('partials/footer') %> 
</html>