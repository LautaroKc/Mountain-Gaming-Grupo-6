<header>
<div class="container">
      <!---Busqueda, cuenta y carrito-->
  <div class="row">
      <div class="col-4">
        <form action="/products/buscar" method="GET">
          <div class="input-group">
          <input id="barrabusqueda" type="text" placeholder="Buscar..." name="buscador" class="is-valid">
          <button id="lupa" type="submit"><i class="fas fa-search"></i></button>
          <small id="errorBusqueda" style="display: none; color: red;"></small>
          </div>
        </form>    
      </div>
    
    <div class="col-4">
      <a href="/"><img src="/images/banner.png" id="banner"></a>
    </div>


    <div class="col-4">
      <div class="btn-group ml-5" id="botoningresoyregistro">
      
        <button type="button" class="btn btn-default dropdown-toggle"data-toggle="dropdown">
          <i class="fas fa-user"></i>
        <span class="caret"></span>
        </button>
      
        <ul class="dropdown-menu" role="menu">
          <% if (typeof usuario == "undefined") { %>
            <li><a href="/users/login" id="ingresoyregistro">Ingresar</a></li>
            <li><a href="/users/register" id="ingresoyregistro">Registrarse</a></li>
          <% } else{ %>
            <li><a href="/users/profile" id="ingresoyregistro">Perfil</a></li>
            <li><a href="/users/logout" id="ingresoyregistro">Desloguear</a></li>
            <% if (usuario.email == "nacho@gmail.com") { %>
              <li><a href="/products/agregar" id="ingresoyregistro">Subir productos</a></li>
              <li><a href="/products/listar" id="ingresoyregistro">Subidos</a></li>
            <% } %>
          <% } %>
        </ul>
        <li class="nav-item" id="carrito">
          <a class="nav-link" href="#" id="cajacarrito"><i class="fas fa-cart-plus"></i></a>
        </li>

        <% if (typeof usuario == 'undefined') { %>
          <img src="/images/users/noavatar.png" alt="" id="avatarImage">
        <% } else { %>
          <li class="nav-item" id="carrito">
            <p class="nav-link text-light mt-3"><%= usuario.nombre %></p>
          </li>
          <img src="/images/users/<%=usuario.avatar %>" alt="" id="avatarImage">
          <% } %>
         

      </div>
    </div>
  </div>

<!---navegacion-->
    <div class="row">
      <div class="col-12" id="navegacion">
        <ul class="nav justify-content-center">
          <img src="/images/icono.png" class="icononavegacion">
          <li class="nav-item" id="headerNav">
            <a class="nav-link active" href="/products/productos">Productos</a>
          </li>
          <li class="nav-item" id="headerNav">
            <a class="nav-link" href="/products/armado">Arm√° tu Pc</a>
          </li>
          <li class="nav-item" id="headerNav">
            <a class="nav-link" href="/nosotros">Nosotros</a>
          </li>
          <li class="nav-item" id="headerNav">
            <a class="nav-link" href="/ayuda">Ayuda</a>
          </li>
        </ul>
      </div>
    </div>
</div>
<script src="/javascripts/headerNav.js"></script>
<script src="/javascripts/barraBusqueda.js"></script>
</header>